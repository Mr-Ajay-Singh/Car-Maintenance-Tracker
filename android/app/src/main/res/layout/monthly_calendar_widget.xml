<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1C1E"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/month_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monthly Overview"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#E6E1E5"/>

        <TextView
            android:id="@+id/target_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target: 0g"
            android:textSize="14sp"
            android:background="@drawable/target_background"
            android:padding="8dp"
            android:textColor="#1A1C1E"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E2F33"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:columnCount="7">

        <!-- Day headers -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="S"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#C2D2CF"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="M"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="T"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="W"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="T"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="F"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="S"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center"/>

    </GridLayout>

    <GridLayout
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2E2F33"
        android:padding="8dp"
        android:columnCount="7"/>

</LinearLayout>
